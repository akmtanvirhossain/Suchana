<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical">
    <LinearLayout
        android:id="@+id/secListRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/secListRow0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Screening ID"
                android:textColor="#006699" />

            <TextView
                android:id="@+id/SuchanaID"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#006699" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="খানা নম্বর" />

            <TextView
                android:id="@+id/hhNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0sp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:id="@+id/secListRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="জেলা" />

            <TextView
                android:id="@+id/zilla"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="উপজেলা" />

            <TextView
                android:id="@+id/upazila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0sp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:id="@+id/secListRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="ইউনিয়ন" />

            <TextView
                android:id="@+id/unions"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="গ্রাম" />

            <TextView
                android:id="@+id/village"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0sp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:id="@+id/secListRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="উপকারভোগী" />

            <TextView
                android:id="@+id/BenName"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="স্বামী" />

            <TextView
                android:id="@+id/HsuName"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0sp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:id="@+id/secListRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="খানা প্রধান" />

            <TextView
                android:id="@+id/HeadName"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="মোবাইল" />

            <TextView
                android:id="@+id/MobNo"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0sp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:id="@+id/secListRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="তারিখ " />

            <TextView
                android:id="@+id/visitdate"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="আপলোড" />

            <TextView
                android:id="@+id/txtUploadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <TextView
                android:id="@+id/Rnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp">

            <Button
                android:id="@+id/cmdQC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/button_style"
                android:text=" QC Interview "
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>