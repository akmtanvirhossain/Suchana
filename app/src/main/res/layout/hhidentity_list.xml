<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45sp"
        android:background="@color/pageHeadingBack"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cmdBack"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:background="@color/pageHeadingBack"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/lblHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:text="Suchana: Inteview List"
            android:textColor="@color/pageHeading"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5sp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5dip"
            android:background="@drawable/button_style_blue"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text=" refresh "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5dip"
            android:background="@drawable/button_style_blue"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="   নতুন ইন্টার্ভিউ(Screening)   "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="0sp"
        android:background="#CCCCCC" />


    <LinearLayout
        android:id="@+id/secDist"
        style="@style/rowStyle0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VlblDist"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="জেলা"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnDist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:drawSelectorOnTop="true"
            android:prompt="@string/planet_prompt"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/lineDist"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/secUpz"
        style="@style/rowStyle0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VlblUpz"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="উপজেলা"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnUpz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:drawSelectorOnTop="true"
            android:prompt="@string/planet_prompt"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/lineUpz"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/secUn"
        style="@style/rowStyle0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VlblUn"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="ইউনিয়ন"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnUn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:drawSelectorOnTop="true"
            android:prompt="@string/planet_prompt"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/lineUn"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/secVill"
        style="@style/rowStyle0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VlblVill"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="গ্রাম"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnVill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:drawSelectorOnTop="true"
            android:prompt="@string/planet_prompt"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/lineVill"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC" />

    <LinearLayout
        style="@style/rowStyle0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rdogrpSampling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textSize="20sp">

            <RadioButton
                android:id="@+id/rdoSampling1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingRight="10dp"
                android:text="প্রাইমারি খানা"
                android:textColor="#01DF74"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdoSampling2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Replacement খানা"
                android:textColor="#FF8000"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5sp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDataSearch"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5dip"
            android:background="@drawable/button_style_blue"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="   Search   "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/secDateSearch"
        style="@style/rowStyle0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Date From"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dtpFDate"
            style="@style/customEdit"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:drawableRight="@drawable/calendersmall"
            android:focusable="false"
            android:inputType="text"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="To"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dtpTDate"
            style="@style/customEdit"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:drawableRight="@drawable/calendersmall"
            android:focusable="false"
            android:inputType="text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="0dip"
            android:background="@drawable/button_style_blue"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text=" Search "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="0sp"
        android:background="#006699" />

    <include
        layout="@layout/common_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/secListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lstData"
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:clickable="true"
                    android:divider="#000000"
                    android:dividerHeight="1px"
                    android:scrollbars="vertical"></ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>