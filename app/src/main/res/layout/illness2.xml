                    android:layout_marginRight="10sp"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:maxLength="50"
                    android:minHeight="40dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:id="@+id/lineH172cX"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/secH172cY"
                style="@style/rowStyle0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblH172cY"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="C. "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/VlblH172cY"

                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:text="অসুস্থতার মোট সময়কাল (বছর)"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtH172cY"
                    style="@style/customEdit"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:id="@+id/lineH172cY"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/secH172cM"
                style="@style/rowStyle0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblH172cM"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="C. "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/VlblH172cM"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:text="অসুস্থতার মোট সময়কাল (মাস)"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtH172cM"
                    style="@style/customEdit"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:id="@+id/lineH172d"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/secH172d"
                style="@style/rowStyle0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblH172d"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="H172"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/VlblH172d"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
