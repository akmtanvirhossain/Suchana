<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:background="#D7D7D7">
    <View android:layout_height="4dip" android:layout_width="fill_parent" android:layout_marginBottom="5sp" android:background="@color/pageHeadingBack"/>
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/form_heading" />

<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:overScrollMode="always" android:isScrollContainer="true" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="outsideInset" android:scrollbars="vertical">

    <LinearLayout android:layout_width="fill_parent" android:paddingTop="0sp" android:layout_height="wrap_content" android:orientation="vertical">
        <Button  android:id="@+id/cmdMenu1" android:layout_width="fill_parent"  style="@style/menuButtonStyle" android:textColor="#FFFFFF"
            android:textSize="20sp" android:text="Menu-1" android:gravity="center|center_vertical"
            android:layout_marginLeft="20sp" android:layout_marginRight="20sp" android:layout_marginBottom="5sp" android:background="@drawable/button_style_gray"/>


        <Button android:id="@+id/cmdDataSync" android:layout_marginTop="20sp" android:layout_width="fill_parent" style="@style/menuButtonStyle"
            android:textSize="20sp" android:text="Data Sync" android:gravity="center|center_vertical"
            android:layout_marginLeft="20sp" android:layout_marginRight="20sp" android:layout_marginBottom="5sp" android:background="@drawable/button_style_blue" android:textColor="#ffffff"/>

        <Button android:id="@+id/cmdExit" android:layout_marginTop="20sp" android:layout_width="fill_parent" style="@style/menuButtonStyle"
            android:textSize="20sp" android:text="Exit" android:gravity="center|center_vertical"
            android:layout_marginLeft="20sp" android:layout_marginRight="20sp" android:layout_marginBottom="5sp" android:background="@drawable/button_style_blue" android:textColor="#ffffff"/>


    </LinearLayout>
</ScrollView>
</LinearLayout>
